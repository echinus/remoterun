<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>dist</id>
  <formats>
    <format>zip</format>
  </formats>
  <baseDirectory>remoterun-${project.version}</baseDirectory>

  <moduleSets>
    <moduleSet>
      <useAllReactorProjects>true</useAllReactorProjects>
      <includes>
        <include>${groupId}:remoterun-agent:jar:${project.version}</include>
      </includes>
      <binaries>
        <unpack>false</unpack>
        <outputDirectory>lib</outputDirectory>
        <includeDependencies>true</includeDependencies>
        <dependencySets>
          <dependencySet/>
        </dependencySets>
      </binaries>
    </moduleSet>
    <moduleSet>
      <useAllReactorProjects>true</useAllReactorProjects>
      <includes>
        <include>${groupId}:remoterun-common:jar:${project.version}</include>
      </includes>
      <binaries>
        <unpack>false</unpack>
        <outputDirectory>lib</outputDirectory>
        <includeDependencies>true</includeDependencies>
        <dependencySets>
          <dependencySet/>
        </dependencySets>
      </binaries>
    </moduleSet>
    <moduleSet>
      <useAllReactorProjects>true</useAllReactorProjects>
      <includes>
        <include>${groupId}:remoterun-embed:jar:${project.version}</include>
      </includes>
      <binaries>
        <unpack>false</unpack>
        <outputDirectory>lib</outputDirectory>
        <includeDependencies>true</includeDependencies>
        <dependencySets>
          <dependencySet/>
        </dependencySets>
      </binaries>
    </moduleSet>
  </moduleSets>
  <fileSets>
    <fileSet>
      <!-- agent script -->
      <directory>src/main/resources</directory>
      <outputDirectory>bin</outputDirectory>
      <fileMode>0755</fileMode>
      <lineEnding>unix</lineEnding>
      <filtered>true</filtered>
      <includes>
        <include>remoterun-agent.cmd</include>
        <include>remoterun-agent.sh</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>