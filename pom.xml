<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>net.formicary.remoterun</groupId>
  <artifactId>remoterun</artifactId>
  <version>1.3-SNAPSHOT</version>
  <packaging>pom</packaging>
  <modules>
    <module>common</module>
    <module>agent</module>
    <module>embed</module>
    <module>examples</module>
  </modules>

  <name>RemoteRun</name>
  <description>Java remote process execution toolkit</description>
  <url>http://www.formicary.net</url>

  <licenses>
    <license>
      <name>The Apache Software License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>repo</distribution>
      <comments>A business-friendly OSS license</comments>
    </license>
  </licenses>

  <scm>
    <url>https://github.com/formicary/remoterun</url>
    <connection>scm:git:git://github.com:formicary/remoterun.git</connection>
    <developerConnection>scm:git:git@github.com:formicary/remoterun.git</developerConnection>
    <tag>HEAD</tag>
  </scm>

  <distributionManagement>
    <repository>
      <id>formicary-nexus</id>
      <name>Internal Releases</name>
      <url>https://nexus.formicary.net/nexus/content/repositories/formicary-releases/</url>
    </repository>
    <snapshotRepository>
      <id>formicary-nexus</id>
      <name>Internal Snapshots</name>
      <url>https://nexus.formicary.net/nexus/content/repositories/formicary-snapshots/</url>
    </snapshotRepository>
  </distributionManagement>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.12</version>
        <configuration>
          <argLine>-Xmx512m -XX:MaxPermSize=92m</argLine>
        </configuration>
      </plugin>
      <plugin>
        <inherited>true</inherited>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.7</source>
          <target>1.7</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <includes>
            <include>**/*</include>
          </includes>
        </configuration>
        <version>2.4</version>
      </plugin>
    </plugins>
  </build>
</project>